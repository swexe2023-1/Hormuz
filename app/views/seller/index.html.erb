<% @products.each do |e| %>
    <p>
        商品名：<%= e.pid %><br>
        価格：<%= e.price %><br>
        商品説明：<%= e.description %><br>
        <!--img src='<%= e.img %>'--><%= image_tag e.img.read if e.img? %><br>
        <%= link_to '編集', edit_product_path(e) %>
        <%= link_to '削除', product_path(e), data: { turbo_method: :delete } %>
        <hr>
    </p>
<% end %>
<p><%= link_to "商品追加", new_product_path%></p>
